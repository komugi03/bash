# --- 定数定義 ---

# リターンコード: 成功
declare -ri RC_SUCCESS=0

# 期待する演算子
declare -r EXPECTED_OPERATORS="+*/-"

# 


# --- 関数定義 ---

# エラーを出力して終了する

# 値が期待した演算子かどうかを判定する
# $1: 値
function is_operator() {
    local -r value=$1
    [[ value =~ ^[${EXPECTED_OPERATORS}]$ ]]
}

# 値が整数かどうかを判定する
# $1: 値
function is_integer() {
    local -r value=$1
    [[ value =~ ^[+-]?[0-9]+$ ]]
}

